{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES6",
    "jsx": "react",
    "jsxFactory": "PAct.createElement",
    "jsxFragmentFactory": "PAct.Fragment",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",                  // ðŸ‘ˆ Required for path aliasing
    "paths": {
      "@/*": ["src/*"]              // ðŸ‘ˆ Now you can use @/ in imports
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
